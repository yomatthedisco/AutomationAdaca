{
  "name": "selenium-automation-framework",
  "version": "1.0.0",
  "description": "Adaca Examination Test",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/**/*.test.js --timeout 60000 --reporter mochawesome",
    "test:headless": "cross-env HEADLESS=true mocha tests/**/*.test.js --timeout 60000 --reporter mochawesome",
    "coverage": "nyc --reporter=lcov --reporter=text mocha tests/**/*.test.js --timeout 60000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf mochawesome-report coverage logs"
  },
  "dependencies": {
    "selenium-webdriver": "^4.36.0",
    "chromedriver": "^141.0.0",
    "mochawesome": "^7.1.3",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.2.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "eslint": "^9.37.0",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0"
  },
  "nyc": {
    "include": ["tests/**/*.js"],
    "reporter": ["text", "lcov"],
    "report-dir": "coverage"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "quotes": ["error", "double"],
      "semi": ["error", "always"]
    }
  },
  "author": "Yom Eustaquio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yomatthedisco/AutomationAdaca.git"
  },
  "keywords": [
    "selenium",
    "automation",
    "webdriver",
    "mocha",
    "chai",
    "pom",
    "test-framework"
  ]
}
