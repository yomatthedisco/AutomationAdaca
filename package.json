{
  "name": "selenium-automation-framework",
  "version": "1.0.0",
  "description": "Adaca Examination Test - Selenium Automation Framework with Page Object Model and Mocha",
  "main": "index.js",
  "scripts": {
    "test": "cross-env HEADLESS=false mocha tests/**/*.test.js --timeout 60000 --reporter mochawesome",
    "test:headless": "cross-env HEADLESS=true mocha tests/**/*.test.js --timeout 60000 --reporter mochawesome",
    "coverage": "nyc --reporter=lcov --reporter=text mocha tests/**/*.test.js --timeout 60000",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf mochawesome-report coverage logs",
    "test:pw": "npx playwright test",
    "test:pw:headed": "npx playwright test --headed"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "mochawesome": "^7.1.3",
    "selenium-webdriver": "^4.36.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "chai": "^6.2.0",
    "chromedriver": "^141.0.0",
    "eslint": "^9.37.0",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0"
  },
  "@playwright/test": "^1.39.0",
  "playwright": {
    "version": "1.39.0"
  },
  "nyc": {
    "include": [
      "tests/**/*.js"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "report-dir": "coverage"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "author": "Yom Eustaquio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yomatthedisco/AutomationAdaca.git"
  },
  "keywords": [
    "selenium",
    "automation",
    "webdriver",
    "mocha",
    "chai",
    "pom",
    "test-framework"
  ]
}
